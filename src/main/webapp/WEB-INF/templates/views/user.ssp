<html>

<%@ val user: com.example.app.User %>

<head>
	<meta charset="utf-8" /> 
	<script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.1/jquery.min.js" type="text/javascript"></script>	

	<script>

		function addPost(userid, title, body){
			$.post(
				"/post/insert",
				{
					userid: userid,
					title: title, 
					body: body 
				})
			.done(function(h) {
				location.reload();
			})
		}


		function removePostById(id){
			$.post("/post/remove/" + id)
			.done(function(h) {
				alert(h);
				location.reload();
			})
		}

		$(document).ready(function() {

			$("#AddPostButton").click(function(){
				addPost(
					${user.Id},
					$('#PostTitleInput').val(),
					$('#PostBodyInput').val()
					);
				}
			);
			
		});

	</script>

</head>
<body>

	

	<p>Title:</p>
	<input id="PostTitleInput" type="text" size="40">
	<p>Body:</p>
	<input id="PostBodyInput" type="text" size="40">
	<br/>
	<button id="AddPostButton" >Add Post</button>

	#for (post <- user.Posts)

		<p> 
			<a href="${post.Location}">${post.Title}</a> | 
			<button onclick= "removePostById(${post.Id})">Delete</button>
		</p>

		<p>${post.Body}</p>
		<br/>
	#end













</body>
</html>